<%- model_class = Recipe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @recipe.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ocassions) %>:</strong></dt>
  <dd>
    <% @recipe.ocassions.each do |tag| %>
      <%= link_to tag.name, recipes_path(:ocassion => tag), :class => 'label-info' %>
    <% end %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:feelings) %>:</strong></dt>
  <dd>
    <% @recipe.feelings.each do |tag| %>
      <%= link_to tag.name, recipes_path(:ocassion => tag), :class => 'label-info' %>
    <% end %>
  </dd>
  
  <dt><strong><%= model_class.human_attribute_name(:cooking_times) %>:</strong></dt>
  <dd><%= @recipe.cooking_times %></dd>
  <dt><strong><%= model_class.human_attribute_name(:favourite) %>:</strong></dt>
  <dd><%= @recipe.favourite %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:guide) %>:</strong></dt>
  <dd><%= @recipe.guide %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              recipes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_recipe_path(@recipe), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              recipe_path(@recipe),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
