<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @recipe.name %>
</p>

<p>
  <b>Cooking times:</b>
  <%= @recipe.cooking_times %>
</p>

<p>
  <b>Favourite:</b>
  <%= @recipe.favourite %>
</p>

<p>
  <b>Guide:</b>
  <%= @recipe.guide %>
</p>

<p>
  <b>Ocassion:</b>
  <% @recipe.ocassions.each do |tag| %>
    <%= link_to tag.name, recipes_path(:ocassion => tag) %>
  <% end %>
</p>

<p>
  <b>Feelings:</b>
  <% @recipe.feelings.each do |tag| %>
    <%= link_to tag.name, recipes_path(:feeling => tag) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
