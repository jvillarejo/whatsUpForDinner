<%= form_for @recipe, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cooking_times, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cooking_times, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :favourite, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :favourite, :class => 'number_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :ocassion_list, :class => 'control-label'%>
    <div class="controls">
      <%= f.text_field :ocassion_list, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :feeling_list, :class => 'control-label'%>
    <div class="controls">
      <%= f.text_field :feeling_list, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :guide, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :guide, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recipes_path, :class => 'btn' %>
  </div>
<% end %>
